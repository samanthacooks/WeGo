<h2>Login</h2>

<%= form_for(:session, url: login_path) do |f| %>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <div>
    <%= link_to "Forgot Your Password?", new_password_reset_path %>
  </div>

  <div class="form-group">
    <%= f.check_box :remember_me %> Remember me
  </div>

  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
